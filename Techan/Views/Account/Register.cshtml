@model RegisterVM
<section class="pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="row">
                    <div class="col-lg-6 m-auto">
                        <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3 class="mb-30">Create an Account</h3>
                                </div>
                                <p class="mb-50 font-sm">
                                    Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy
                                </p>
                                <form method="post">
                                    <div class="form-group">
                                        <input asp-for="FullName" placeholder="Fullname">
                                        <span class="text-danger text-sm" asp-validation-for="FullName"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Username" placeholder="Username">
                                        <span class="text-danger text-sm" asp-validation-for="Username"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" placeholder="Email">
                                        <span class="text-danger text-sm" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" placeholder="Password">
                                        <span class="text-danger text-sm" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="RepeatPassword" placeholder="Repeat Password">
                                        <span class="text-danger text-sm" asp-validation-for="RepeatPassword"></span>
                                    </div>
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                   
                                    <div class="form-group">
                                        <a class="text-muted" asp-action="Login">Already have an account?</a>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login"> Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

